<!--logs.wxml-->
<view class="container">
	<view class="section">
		<textarea placeholder="您在预定餐点过程中遇到任何问题，您有什么建议或者想寻求我们的帮助，请您填写反馈信息，以便我们能快速为您解决。" auto-focus />
		</view>
    <view class="page-bd">
        <image class="image" src="{{imgPath}}" mode='scaleToFill' bindtap="previewImg"></image>
        <button bindtap="selectImg">选择图片</button>
        <button bindtap="loadImg">上传图片</button>
    </view>
    <button class="order_btn">提交反馈</button>
    <view class="userinfo">
		<cover-image src="../images/logo.jpg" class="logo"></cover-image>
		<text class="userinfo-nickname">{{userInfo.nickName}}</text>
	</view>
</view>